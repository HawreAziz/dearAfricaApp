<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_rounded_corner"
    tools:context="com.whatsup.hawre.whatsup.activities.HorizontalRecyclerViewItem">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/horizontalRecylerViewItem"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="202dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"
                android:id="@+id/hRecyclerViewImage" />

            <TextView
                android:id="@+id/hRecyclerViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hRecyclerViewImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text="title" />

            <TextView
                android:id="@+id/hDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/hRecyclerViewImage"
                android:layout_alignStart="@+id/hRecyclerViewImage"
                android:layout_below="@+id/hRecyclerViewTitle"
                android:layout_marginTop="31dp"
                android:text="description" />
            <TextView
                android:id="@+id/hRecyclerViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:text="02:30" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
