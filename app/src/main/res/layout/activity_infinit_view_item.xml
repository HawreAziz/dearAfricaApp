<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whatsup.hawre.whatsup.items.InfinitViewItem">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/infiniteLayout"
            android:background="@drawable/button_rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/infiniteViewImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/infiniteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infiniteViewImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44dp"
                android:text="title" />

            <TextView
                android:id="@+id/infiniteDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/infiniteTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="53dp"
                android:text="description" />

            <TextView
                android:id="@+id/infiniteTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="22dp"
                android:layout_marginEnd="13dp"
                android:layout_marginRight="13dp"
                android:text="time" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
